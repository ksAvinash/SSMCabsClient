<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetupStopActivity">

    <LinearLayout
        android:layout_margin="20dp"
        android:id="@+id/select_stop_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <com.labs.ssmcabs.client.fonts.DecurionOutlineFont
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="select your stop"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <ListView
        android:layout_marginTop="10dp"
        android:id="@+id/stop_list"
        android:layout_below="@+id/select_stop_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
