<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedbackActivity">

    <com.labs.ssmcabs.client.fonts.DecurionOutlineFont
        android:layout_margin="30dp"
        android:id="@+id/r1"
        android:textSize="40sp"
        android:text="FEEDBACK"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <EditText
        android:background="@drawable/edittext_border"
        android:inputType="textMultiLine"
        android:lines="8"
        android:gravity="top|start"
        android:layout_margin="16dp"
        android:layout_below="@+id/r1"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="10"
        android:id="@+id/feedback_edittext"
        android:scrollbars="vertical"
        />

    <Button
        android:background="@drawable/rounded_accent_button"
        android:textColor="@color/whiteColor"
        android:text="SUBMIT"
        android:layout_margin="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/feedback_edittext"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/feedback_submit_button"
        />

</RelativeLayout>